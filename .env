# PDF OCR Processor - Environment Variables Template
# Copia questo file in .env e modifica i valori

# ======================
# CONFIGURAZIONE API
# ======================
API_PORT=5000
API_HOST=0.0.0.0
API_WORKERS=2
API_TIMEOUT=600
API_MAX_REQUESTS=100

# ======================
# CONFIGURAZIONE OCR
# ======================
OCR_LANGUAGE=ita+eng
OCR_DPI=300
OCR_PSM=1
OCR_OEM=3

# ======================
# LIMITI RISORSE
# ======================
MEMORY_LIMIT=2g
CPU_LIMIT=2.0
MAX_FILE_SIZE_MB=50
PROCESSING_TIMEOUT=600

# ======================
# DIRECTORY
# ======================
INPUT_DIR=./input
OUTPUT_DIR=./output
TEMP_DIR=./temp
BATCH_INPUT_DIR=./batch_input
BATCH_OUTPUT_DIR=./batch_output

# ======================
# LOGGING
# ======================
LOG_LEVEL=INFO
LOG_FILE=./logs/pdf_processor.log
ENABLE_DEBUG=false

# ======================
# MONITORAGGIO
# ======================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# ======================
# WEBHOOK (opzionale)
# ======================
WEBHOOK_URL=
WEBHOOK_SECRET=
WEBHOOK_TIMEOUT=10

# ======================
# CLEANUP
# ======================
AUTO_CLEANUP_HOURS=1
KEEP_TEMP_FILES=false
MAX_TEMP_SIZE_GB=5

# ======================
# SICUREZZA
# ======================
ALLOWED_EXTENSIONS=pdf
MAX_CONCURRENT_JOBS=10
RATE_LIMIT_PER_MINUTE=60

# ======================
# INTEGRAZIONE
# ======================
ENABLE_CORS=true
CORS_ORIGINS=*
API_KEY_REQUIRED=false
API_KEY=

# ======================
# PRODUZIONE
# ======================
ENVIRONMENT=development
DEBUG=false
TESTING=false

